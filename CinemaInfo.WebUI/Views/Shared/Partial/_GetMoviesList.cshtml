@model CinemaInfo.WebUI.Models.MovieListViewModel

@if (Model.Movies != null)
{
    foreach (var movie in Model.Movies)
    {
        <div class="d-flex flex-row justify-content-between mb-3 mt-3">
            <table class="table table-bordered table-hover table-responsive">
                <thead>
                    <tr>
                        <th scope="col">Poster</th>
                        <th scope="col">İsim</th>
                        <th scope="col">Yıl</th>
                        <th scope="col">Tür</th>
                        <th scope="col">imdb Puan</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th class="text-center" style="width:300px;height:300px"><img src="@(movie.Poster == "N/A" ? "https://w7.pngwing.com/pngs/116/765/png-transparent-clapperboard-computer-icons-film-movie-poster-angle-text-logo-thumbnail.png": movie.Poster)" alt="@movie.Title" style="width:300px;height:300px;" /></th>
                        <td>@movie.Title</td>
                        <td>@movie.Year</td>
                        <td>@movie.Type</td>
                        <td>@movie.imdbId</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <hr />
    }
}
else
{
    <div class="alert alert-dark mt-3" role="alert">
        Sonuç Bulunamadı...
    </div>
}
